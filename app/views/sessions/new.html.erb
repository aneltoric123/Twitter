<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <!-- Twitter Header -->
        <div class="card-header bg-primary text-white">
          <div class="d-flex align-items-center justify-content-between">
                <%= image_tag('Logo_of_Twitter.svg.png', alt: 'Twitter Logo', class: 'twitter-logo') %>

            <h1 class="text-center">Login</h1>
          </div>
        </div>

        <div class="card-body">
          <%= form_with(url: login_path, class: 'mt-3') do |form| %>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email, class: 'form-control', required: true %>
            </div>

            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password, class: 'form-control', required: true %>
            </div>

            <%= form.submit 'Login', class: 'btn btn-primary btn-block mt-4' %>
          <% end %>
        </div>

        <div class="card-footer text-center">
          <%= link_to 'New user? Register Here!', new_user_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>