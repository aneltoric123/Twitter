<!-- app/views/messages/new.html.erb -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <h1 class="card-header bg-primary text-white">New Message</h1>
        <div class="card-body">
          <%= form_with(model: @message, url: messages_path) do |form| %>
            <div class="form-group">
              <%= form.label :receiver_id %>
              <%= form.select :receiver_id, options_for_select(User.all.map { |u| [u.username, u.id] }), {}, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :subject %>
              <%= form.text_field :subject, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :content %>
              <%= form.text_area :content, class: "form-control", rows: 5 %>
            </div>
            <div class="text-center">
              <%= form.submit 'Send', class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
