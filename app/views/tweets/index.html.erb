<h1 class="mt-4 mb-4">All Tweets</h1>

<div class="container">
 
    <%= link_to 'Create Tweet', new_tweet_path, class: 'btn btn-primary mb-4' %>
    <%= link_to 'Profile', profile_path, class: 'btn btn-primary mr-2' %>
    <%= link_to 'Logout', logout_path, class: 'btn btn-success' %>
  <% end %>

  <% @tweets.each do |tweet| %>
    <div class="card mt-4">
      <div class="card-body">
        <p class="card-text"><%= tweet.content %></p>
      </div>
    </div>
  <% end %>
</div>