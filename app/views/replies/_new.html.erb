<div class="reply-form mt-2">
  <%= form_with(model: [tweet, Reply.new], local: true) do |form| %>
    <div class="form-group">
      <%= form.text_area :content, placeholder: 'Write your reply here...', class: 'form-control' %>
    </div>
    <%= form.submit 'Reply', class: 'btn btn-primary btn-sm' %>
  <% end %>
</div>
